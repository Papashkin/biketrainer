<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/pure_white</item>
        <item name="colorOnSurface">@color/pure_white</item>
    </style>

    <style name="MainToolbar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/full_black</item>
        <item name="android:textColor">#ffe500</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="TitleText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/pure_white</item>
    </style>

</resources>
