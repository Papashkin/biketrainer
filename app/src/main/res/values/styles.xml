<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_central</item>
        <item name="colorOnPrimary">@color/pure_white</item>
        <item name="colorSurface">@color/color_deeper</item>
        <item name="colorOnSurface">@color/full_black</item>
        <item name="colorAccent">@color/color_lighter</item>
        <item name="colorOnBackground">@color/color_cooler</item>
        <item name="android:colorBackground">@color/pure_white</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="MainToolbar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/full_black</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="TitleText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/pure_white</item>
    </style>

    <!-- Bottom sheet -->
    <style name="AppBottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
        <item name="android:colorBackground">@color/color_deeper</item>
    </style>

    <style name="RoundedBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>

    <!-- Input text fields -->
    <style name="TextInputField" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:colorBackground">@color/color_deeper</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <!-- Text buttons -->
    <style name="Widget.AntTrainer.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/text_size_body2</item>
        <item name="android:textAppearance">@style/Body2.Primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="rippleColor">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Widget.AntTrainer.TextButton.OnSecondary">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Widget.AntTrainer.TextButton.OnSurface">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.AntTrainer.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/radius_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="rippleColor">@color/pure_white</item>
    </style>

    <style name="Widget.AntTrainer.Button.OnPrimary">
        <item name="android:textSize">@dimen/text_size_body1</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.AntTrainer.Button.Surface">
        <item name="android:textSize">@dimen/text_size_body1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="Widget.AntTrainer.Button.Medium">
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Widget.AntTrainer.Button.Medium.OnPrimary">
        <item name="android:textSize">@dimen/text_size_body1</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.AntTrainer.Button.Medium.Surface">
        <item name="android:textSize">@dimen/text_size_body1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>
</resources>
