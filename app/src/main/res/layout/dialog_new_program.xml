<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="9dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

    <View
            android:id="@+id/bottomDialogBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/full_black"
            android:clickable="true"
            android:alpha="0.6"
            android:elevation="8dp"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:background="@drawable/shape_new_profile_dialog"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarNewProfile"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    style="@style/MainToolbar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                    android:id="@+id/layoutTargetPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/toolbarNewProfile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/layoutDurationTime">

                <TextView
                        android:id="@+id/textTargetPower"
                        android:text="@string/program_settings_power"
                        android:ems="7"
                        android:maxLines="2"
                        android:textSize="16sp"
                        android:gravity="end"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/editTargetPower"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"
                        android:layout_marginStart="4dp"
                        android:ems="3"
                        android:layout_height="wrap_content"
                        tools:ignore="LabelFor"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layoutDurationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/toolbarNewProfile"
                    app:layout_constraintStart_toEndOf="@id/layoutTargetPower"
                    app:layout_constraintEnd_toEndOf="parent">

                <TextView
                        android:id="@+id/textDurationTime"
                        android:text="@string/program_settings_time"
                        android:textSize="16sp"
                        android:ems="6"
                        android:gravity="end"
                        android:maxLines="2"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/editDuration"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:ems="2"
                        android:inputType="numberDecimal"
                        android:layout_marginStart="4dp"
                        android:layout_height="wrap_content"
                        tools:ignore="LabelFor"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layoutRestPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/layoutTargetPower"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/layoutRestDurationTime">

                <TextView
                        android:id="@+id/textRestPower"
                        android:text="@string/program_settings_rest_power"
                        android:textSize="16sp"
                        android:maxLines="2"
                        android:ems="7"
                        android:gravity="end"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/editRestPower"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"
                        android:layout_marginStart="4dp"
                        android:ems="3"
                        android:layout_height="wrap_content"
                        tools:ignore="LabelFor"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layoutRestDurationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/layoutDurationTime"
                    app:layout_constraintStart_toEndOf="@id/layoutRestPower"
                    app:layout_constraintEnd_toEndOf="parent">

                <TextView
                        android:id="@+id/textRestDurationTime"
                        android:text="@string/program_settings_rest_time"
                        android:textSize="16sp"
                        android:maxLines="2"
                        android:ems="6"
                        android:gravity="end"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/editRestDuration"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:ems="2"
                        android:inputType="numberDecimal"
                        android:layout_marginStart="4dp"
                        android:layout_height="wrap_content"
                        tools:ignore="LabelFor"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layoutIntervalsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/layoutRestDurationTime"
                    app:layout_constraintEnd_toEndOf="@id/layoutRestPower">

                <TextView
                        android:id="@+id/textIntervalsCount"
                        android:text="@string/program_settings_count"
                        android:textSize="16sp"
                        android:maxLines="2"
                        android:ems="5"
                        android:gravity="end"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/editIntervalsCount"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:ems="2"
                        android:inputType="number"
                        android:layout_marginStart="4dp"
                        android:layout_height="wrap_content"
                        tools:ignore="LabelFor"/>
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_white"
                    app:fabSize="mini"
                    app:backgroundTint="@color/green_700"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/layoutIntervalsCount"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnCancel"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close"
                    app:fabSize="mini"
                    app:backgroundTint="@color/red_700"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/layoutIntervalsCount"
                    app:layout_constraintStart_toEndOf="@id/btnAdd"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <Space
                    android:id="@+id/space"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/btnAdd"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>