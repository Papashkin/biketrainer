<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarProfiles"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            style="@style/MainToolbar"
            app:title="@string/app_name"
            app:titleTextColor="@color/pure_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/btnProfiles"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/toolbarProfiles"
            app:layout_constraintBottom_toTopOf="@id/btnPrograms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape_start_buttons"
            android:text="@string/profiles_text"
            android:textColor="@color/pure_white"/>

    <Button
            android:id="@+id/btnPrograms"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/btnProfiles"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape_start_buttons"
            android:text="@string/programs_text"
            android:textColor="@color/pure_white"/>

</androidx.constraintlayout.widget.ConstraintLayout>