<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.start.StartFragment">

    <ImageView
            android:id="@+id/cycling_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cycling_road"
            android:layout_marginBottom="@dimen/margin_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/start_btn"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/start_btn"
            style="@style/Body1.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginVertical="@dimen/margin_medium"
            android:background="@drawable/bg_button_rounded_small"
            android:text="@string/start"
            app:layout_constraintBottom_toTopOf="@id/profiles_btn"
            app:layout_constraintTop_toBottomOf="@id/cycling_iv" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/profiles_btn"
            style="@style/Body1.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginVertical="@dimen/margin_medium"
            android:background="@drawable/bg_button_rounded_small"
            android:text="@string/profiles"
            app:layout_constraintBottom_toTopOf="@id/programs_btn"
            app:layout_constraintTop_toBottomOf="@id/start_btn" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/programs_btn"
            style="@style/Body1.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/bg_button_rounded_small"
            android:text="@string/programs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profiles_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>
