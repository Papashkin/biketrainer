<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pure_white">

    <TextView
            android:id="@+id/textViewHR"
            android:text="@string/text_heartrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/full_black"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textViewCadence"/>

    <TextView
            android:id="@+id/heartRateValue"
            tools:text="999"
            android:text="@string/text_null_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/grey_700"
            android:background="@drawable/shape_value_info"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewHR"
            app:layout_constraintStart_toStartOf="@id/textViewHR"
            app:layout_constraintEnd_toEndOf="@id/textViewHR"/>


    <TextView
            android:id="@+id/textViewCadence"
            android:text="@string/text_cadence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/full_black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/textViewHR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textViewHR"/>

    <TextView
            android:id="@+id/cadenceValue"
            tools:text="999"
            android:text="@string/text_null_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/grey_700"
            android:background="@drawable/shape_value_info"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewCadence"
            app:layout_constraintStart_toStartOf="@id/textViewCadence"
            app:layout_constraintEnd_toEndOf="@id/textViewCadence"/>


    <TextView
            android:id="@+id/textViewSpeed"
            android:text="@string/text_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/full_black"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/heartRateValue"
            app:layout_constraintStart_toStartOf="@id/textViewHR"
            app:layout_constraintEnd_toEndOf="@id/textViewHR"/>

    <TextView
            android:id="@+id/speedValue"
            tools:text="999"
            android:text="@string/text_null_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/grey_700"
            android:background="@drawable/shape_value_info"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewSpeed"
            app:layout_constraintStart_toStartOf="@id/textViewSpeed"
            app:layout_constraintEnd_toEndOf="@id/textViewSpeed"/>


    <TextView
            android:id="@+id/textViewPower"
            android:text="@string/text_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/full_black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/textViewSpeed"
            app:layout_constraintStart_toStartOf="@id/textViewCadence"
            app:layout_constraintEnd_toEndOf="@id/textViewCadence"/>

    <TextView
            android:id="@+id/powerValue"
            tools:text="999"
            android:text="@string/text_null_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/grey_700"
            android:background="@drawable/shape_value_info"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewPower"
            app:layout_constraintStart_toStartOf="@id/textViewPower"
            app:layout_constraintEnd_toEndOf="@id/textViewPower"/>


    <TextView
            android:id="@+id/textViewDistance"
            android:text="@string/text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/full_black"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/speedValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/distanceValue"
            tools:text="999"
            android:text="@string/text_null_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/grey_700"
            android:background="@drawable/shape_value_info"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewDistance"
            app:layout_constraintStart_toStartOf="@id/textViewDistance"
            app:layout_constraintEnd_toEndOf="@id/textViewDistance"/>


    <FrameLayout
            android:id="@+id/viewProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_value_info"
            app:layout_constraintTop_toBottomOf="@id/distanceValue"
            android:elevation="10dp">

        <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/workGraph"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_margin="4dp"
                android:background="@drawable/shape_value_info"
                android:visibility="invisible"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabSelectProgram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_add_white"
                app:backgroundTint="@color/grey_400"/>

    </FrameLayout>


    <Button
            android:id="@+id/buttonStartWork"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="START"
            android:background="@color/green_700"
            android:textColor="@color/full_black"
            app:layout_constraintTop_toBottomOf="@id/viewProgram"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonStopWork"/>

    <Button
            android:id="@+id/buttonStopWork"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="STOP"
            android:textColor="@color/pure_white"
            android:background="@color/red_700"
            app:layout_constraintTop_toBottomOf="@id/viewProgram"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/buttonStartWork"
            app:layout_constraintEnd_toStartOf="@id/buttonBackToScan"/>

    <Button
            android:id="@+id/buttonBackToScan"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textColor="@color/full_black"
            android:background="@color/grey_500"
            app:layout_constraintTop_toBottomOf="@id/viewProgram"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/buttonStopWork"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>