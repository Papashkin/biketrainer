<?xml version="1.0" encoding="utf-8"?>
<me.thanel.swipeactionview.SwipeActionView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileSwipeLayout">

    <ImageView
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/ic_edit_white_24"
            android:background="@color/green_700"
            tools:ignore="ContentDescription"/>

    <ImageView
            android:id="@+id/btnDeleteProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/ic_delete_white_24"
            android:background="@color/red_700"
            android:layout_gravity="end"
            tools:ignore="ContentDescription"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/textProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileList"
                android:padding="13dp"
                android:elevation="6dp"
                tools:text="PROFILE 1"
                app:layout_constraintTop_toTopOf="parent"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shape_bottom_line"
                app:layout_constraintTop_toBottomOf="@id/textProfileName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</me.thanel.swipeactionview.SwipeActionView>