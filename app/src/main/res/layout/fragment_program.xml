<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/layoutProgramName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:id="@+id/textProgramName"
                android:text="@string/program_name"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/editProgramName"
                android:layout_width="200dp"
                android:layout_marginTop="4dp"
                android:inputType="numberDecimal"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                tools:ignore="LabelFor"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layoutTargetPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="30dp"
            app:layout_constraintTop_toBottomOf="@id/layoutProgramName"
            app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:id="@+id/textTargetPower"
                android:text="@string/program_power"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/editTargetPower"
                android:layout_width="200dp"
                android:layout_marginTop="4dp"
                android:inputType="numberDecimal"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                tools:ignore="LabelFor"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layoutDurationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="30dp"
            app:layout_constraintTop_toBottomOf="@id/layoutTargetPower"
            app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:id="@+id/textDurationTime"
                android:text="@string/program_duration"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/editDuration"
                android:layout_width="200dp"
                android:layout_marginTop="4dp"
                android:inputType="numberDecimal"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                tools:ignore="LabelFor"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:src="@drawable/ic_add_white"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutDurationTime"/>

    <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartProgram"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutDurationTime"
            app:layout_constraintBottom_toTopOf="@id/fabCreateProgram"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCreateProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:fabSize="normal"
            android:src="@drawable/ic_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>