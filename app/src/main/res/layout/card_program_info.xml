<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
        android:id="@+id/clProgram"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@color/pure_white"
        android:clickable="true">

    <TextView
            android:id="@+id/textProgramName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="Program name"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:ems="8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/textAveragePower"
            tool:text="Average power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:ems="9"
            app:layout_constraintTop_toBottomOf="@id/textProgramName"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/textMaxPower"
            tool:text="Max power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="20dp"
            android:ems="9"
            app:layout_constraintTop_toBottomOf="@id/textProgramName"
            app:layout_constraintStart_toEndOf="@id/textAveragePower"/>

    <TextView
            android:id="@+id/textDuration"
            tool:text="Total time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:ems="9"
            app:layout_constraintTop_toBottomOf="@id/textAveragePower"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:id="@+id/imageProgram"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@id/textDuration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tool:ignore="ContentDescription"/>


</androidx.constraintlayout.widget.ConstraintLayout>
