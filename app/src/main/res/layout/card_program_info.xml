<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/shape_program_type" >

        <me.thanel.swipeactionview.SwipeActionView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/swipeLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                    android:id="@+id/btnEditProgram"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:elevation="2dp"
                    android:src="@drawable/ic_edit_white_40"
                    android:background="@color/green_700"
                    tool:ignore="ContentDescription"/>

            <ImageView
                    android:id="@+id/btnDeleteProgram"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:elevation="2dp"
                    android:src="@drawable/ic_delete_white_40"
                    android:background="@color/red_700"
                    tool:ignore="ContentDescription"
                    android:layout_gravity="end"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:background="@color/pure_white">

                <TextView
                        android:id="@+id/textProgramName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tool:text="Program name"
                        android:textSize="16sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="4dp"
                        android:ems="8"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                        android:id="@+id/textAveragePower"
                        tool:text="Average power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="4dp"
                        android:ems="9"
                        app:layout_constraintTop_toBottomOf="@id/textProgramName"
                        app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                        android:id="@+id/textMaxPower"
                        tool:text="Max power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="20dp"
                        android:ems="9"
                        app:layout_constraintTop_toBottomOf="@id/textProgramName"
                        app:layout_constraintStart_toEndOf="@id/textAveragePower"/>

                <TextView
                        android:id="@+id/textDuration"
                        tool:text="Total time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="4dp"
                        android:ems="9"
                        app:layout_constraintTop_toBottomOf="@id/textAveragePower"
                        app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                        android:id="@+id/imageProgram"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="4dp"
                        app:layout_constraintTop_toBottomOf="@id/textDuration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tool:ignore="ContentDescription"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </me.thanel.swipeactionview.SwipeActionView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
