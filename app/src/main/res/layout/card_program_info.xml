<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/textProgramName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="Program name"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/textAveragePower"
                tool:text="Average power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@id/textProgramName"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/textMaxPower"
                tool:text="Max power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/textProgramName"
                app:layout_constraintStart_toEndOf="@id/textAveragePower"/>

        <TextView
                android:id="@+id/textDuration"
                tool:text="duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@id/textAveragePower"
                app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
                android:id="@+id/imageProgram"
                android:layout_margin="2dp"
                app:layout_constraintTop_toBottomOf="@id/textDuration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        <!--<com.github.mikephil.charting.charts.BarChart-->
                <!--android:id="@+id/chartProgram"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="120dp"-->
                <!--android:layout_margin="2dp"-->
                <!--android:background="#ffffff"-->
                <!--app:layout_constraintTop_toBottomOf="@id/textDuration"-->
                <!--app:layout_constraintStart_toStartOf="parent"-->
                <!--app:layout_constraintEnd_toEndOf="parent"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
