<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pure_white"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Toolbar
                android:id="@+id/toolbarProgramSettings"
                style="@style/MainToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:title="@string/toolbar_new_program"
                android:titleTextColor="@color/pure_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
                android:id="@+id/buttonSaveProgram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_save_white_24"
                android:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="@id/toolbarProgramSettings"
                app:layout_constraintEnd_toEndOf="@id/toolbarProgramSettings"
                app:layout_constraintTop_toTopOf="@id/toolbarProgramSettings"
                tools:ignore="ContentDescription" />

        <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chartProgram"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="10dp"
                android:background="@android:color/white"
                android:focusableInTouchMode="false"
                android:isScrollContainer="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbarProgramSettings" />

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutProgramName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                app:errorEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/program_settings_name"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/chartProgram"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editProgramName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:id="@+id/btnIntervals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_intervals"
                android:drawablePadding="10dp"
                android:padding="30dp"
                android:text="@string/program_type_intervals"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/layoutProgramName"
                app:layout_constraintBottom_toTopOf="@id/btnUpstairs"
                app:layout_constraintEnd_toStartOf="@id/btnSegment"
                app:layout_constraintStart_toStartOf="parent" />

        <Button
                android:id="@+id/btnSegment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_intervals"
                android:drawablePadding="10dp"
                android:padding="30dp"
                android:text="@string/program_type_segment"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/layoutProgramName"
                app:layout_constraintBottom_toTopOf="@id/btnUpstairs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnIntervals" />

        <Button
                android:id="@+id/btnUpstairs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_stairs_up"
                android:drawablePadding="10dp"
                android:padding="30dp"
                android:text="@string/program_type_3_steps_up"
                app:layout_constraintTop_toBottomOf="@id/btnIntervals"
                app:layout_constraintEnd_toStartOf="@id/btnDownstairs"
                app:layout_constraintStart_toStartOf="parent" />

        <Button
                android:id="@+id/btnDownstairs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_stairs_down"
                android:drawablePadding="10dp"
                android:padding="30dp"
                android:text="@string/program_type_3_steps_down"
                app:layout_constraintTop_toBottomOf="@id/btnSegment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnUpstairs" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:id="@+id/viewBottomSheetBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"
            android:alpha="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/programSettingLayout"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/shape_new_profile_dialog"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="@string/bottom_sheet_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutTargetPower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                app:errorEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/program_settings_power"
                android:layout_margin="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTargetPower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutRestPower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                app:errorEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/program_settings_rest_power"
                android:layout_margin="4dp"
                app:layout_constraintTop_toBottomOf="@id/layoutTargetPower"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editRestPower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutDurationTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                app:errorEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/program_settings_time"
                android:layout_margin="4dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutRestPower"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutRestDurationTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                app:errorEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/program_settings_rest_time"
                android:layout_margin="4dp"
                app:layout_constraintTop_toBottomOf="@id/layoutDurationTime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editRestDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutIntervalsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                app:errorEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/program_settings_count"
                android:layout_margin="4dp"
                app:layout_constraintTop_toBottomOf="@id/layoutRestDurationTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editIntervalsCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_add_white"
                app:backgroundTint="@color/green_700"
                app:fabSize="normal"
                app:layout_constraintEnd_toStartOf="@id/btnCancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutIntervalsCount" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_close"
                app:backgroundTint="@color/red_700"
                app:fabSize="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnAdd"
                app:layout_constraintTop_toBottomOf="@+id/layoutIntervalsCount" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>