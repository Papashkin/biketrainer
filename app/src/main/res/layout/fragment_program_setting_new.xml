<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pure_white"
        android:clickable="true">

    <Toolbar
            android:id="@+id/toolbarProgramSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MainToolbar"
            android:title="@string/toolbar_new_program"
            android:titleTextColor="@color/pure_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
            android:id="@+id/buttonSaveProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:background="@drawable/ic_save_white_24"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="@id/toolbarProgramSettings"
            app:layout_constraintTop_toTopOf="@id/toolbarProgramSettings"
            app:layout_constraintBottom_toBottomOf="@id/toolbarProgramSettings"
            tools:ignore="ContentDescription"/>

    <LinearLayout
            android:id="@+id/programSegment"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_program_type"
            android:clickable="true"
            android:elevation="7dp"
            android:layout_marginTop="10dp"
            android:alpha="0.7"
            app:layout_constraintTop_toBottomOf="@id/toolbarProgramSettings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/programIntervals">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/segment"
                tools:ignore="ContentDescription"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/program_type_segment"
                android:textSize="22sp"
                android:ems="6"
                android:gravity="center"
                android:textColor="@color/full_black"
                android:layout_gravity="center_horizontal"/>

        <Space android:layout_width="match_parent" android:layout_height="10dp"/>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/programIntervals"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_program_type"
            android:clickable="true"
            android:elevation="7dp"
            android:layout_marginTop="10dp"
            android:alpha="0.7"
            app:layout_constraintTop_toBottomOf="@id/toolbarProgramSettings"
            app:layout_constraintStart_toEndOf="@id/programSegment"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/intervals"
                tools:ignore="ContentDescription"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/program_type_intervals"
                android:textSize="22sp"
                android:ems="6"
                android:gravity="center"
                android:textColor="@color/full_black"
                android:layout_gravity="center_horizontal"/>

        <Space android:layout_width="match_parent" android:layout_height="10dp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/programStepsUp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_program_type"
            android:clickable="true"
            android:elevation="7dp"
            android:layout_marginTop="10dp"
            android:alpha="0.7"
            app:layout_constraintTop_toBottomOf="@id/programSegment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/programStepsDown">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="center"

                android:src="@drawable/three_steeps_up"
                tools:ignore="ContentDescription"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/program_type_3_steps_up"
                android:textSize="22sp"
                android:ems="6"
                android:gravity="center"
                android:textColor="@color/full_black"
                android:layout_gravity="center_horizontal"/>

        <Space android:layout_width="match_parent" android:layout_height="10dp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/programStepsDown"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_program_type"
            android:clickable="true"
            android:elevation="7dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/programIntervals"
            app:layout_constraintStart_toEndOf="@id/programSegment"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/three_steeps_down"
                android:layout_gravity="center"
                android:alpha="0.7"
                tools:ignore="ContentDescription"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/program_type_3_steps_down"
                android:textSize="22sp"
                android:ems="6"
                android:gravity="center"
                android:alpha="0.7"
                android:textColor="@color/full_black"
                android:layout_gravity="center_horizontal"/>

        <Space android:layout_width="match_parent" android:layout_height="10dp"/>

    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartProgram"
            android:layout_width="match_parent"
            android:focusableInTouchMode="false"
            android:isScrollContainer="false"
            android:layout_height="240dp"
            android:background="@android:color/white"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/programStepsDown"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <include
            android:id="@+id/newProgramBottomDialog"
            layout="@layout/dialog_new_program"
            android:visibility="invisible"/>

