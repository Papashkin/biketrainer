<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pure_white">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/MainToolbar"
            app:title="@string/toolbar_devices"
            app:titleTextColor="@color/pure_white"/>

    <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:elevation="9dp"
            app:layout_constraintTop_toTopOf="@id/toolbarScan"
            app:layout_constraintBottom_toBottomOf="@id/toolbarScan"
            app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
                android:id="@+id/pbScan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="9dp"
                android:visibility="gone"
                android:indeterminateTint="@color/pure_white"/>

        <ImageButton
                android:id="@+id/btnScan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="9dp"
                android:src="@drawable/ic_search_white_30"
                android:background="@color/full_black"
                android:indeterminateTint="@color/pure_white"
                tools:ignore="ContentDescription"/>

    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabContinue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_forward"
            app:backgroundTint="@color/red_700"
            app:fabSize="normal"
            android:visibility="invisible"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDevices"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbarScan"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>