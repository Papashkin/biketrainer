<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pure_white">

    <ImageView
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin_regular"
            android:src="@drawable/ic_arrow_back_32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

    <TextView
            android:id="@+id/title_tv"
            style="@style/Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_regular"
            android:text="@string/scan_devices_searching"
            app:layout_constraintBottom_toBottomOf="@id/back_btn"
            app:layout_constraintStart_toEndOf="@id/back_btn"
            app:layout_constraintTop_toTopOf="@id/back_btn" />

    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/margin_tiny"
            app:layout_constraintBottom_toBottomOf="@id/title_tv"
            app:layout_constraintStart_toEndOf="@id/title_tv"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="dots_animation.json" />

    <androidx.recyclerview.widget.RecyclerView
            android:overScrollMode="never"
            android:id="@+id/devices_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_small"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/continue_fl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_tv"
            tools:itemCount="4"
            tools:listitem="@layout/card_sensor_info" />

    <FrameLayout
            android:id="@+id/continue_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent">

        <Button
                style="@style/Widget.Bitcasino.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginVertical="@dimen/margin_small_extra"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:gravity="center"
                android:text="@string/scan_continue" />

    </FrameLayout>

    <FrameLayout
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="?attr/colorOnPrimary"
            tools:visibility="gone">

        <ProgressBar
                android:id="@+id/loading_pb"
                android:layout_width="@dimen/progress_bar_size"
                android:layout_height="@dimen/progress_bar_size"
                android:layout_gravity="center"
                android:indeterminateTint="?attr/colorPrimary" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
